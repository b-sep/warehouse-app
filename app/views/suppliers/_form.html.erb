<%= form_with model: supplier do |f| %>
  <div>
    <%= f.label :corporate_name %>
    <%= f.text_field :corporate_name %>
    <% @supplier.errors.full_messages_for(:corporate_name).each do |msg| %>
      <%= msg %><br><br>
    <% end %>
  </div>

  <div>
    <%= f.label :brand_name %>
    <%= f.text_field :brand_name %>
    <% @supplier.errors.full_messages_for(:brand_name).each do |msg| %>
      <%= msg %><br><br>
    <% end %>
  </div>

  <div>
    <%= f.label :registration_number %>
    <%= f.text_field :registration_number, placeholder: '14 nÃºmeros' %>
    <% @supplier.errors.full_messages_for(:registration_number).each do |msg| %>
      <%= msg %><br><br>
    <% end %>
  </div>

  <div>
    <%= f.label :full_address %>
    <%= f.text_field :full_address %>
    <% @supplier.errors.full_messages_for(:full_address).each do |msg| %>
      <%= msg %><br><br>
    <% end %>
  </div>

  <div>
    <%= f.label :city %>
    <%= f.text_field :city %>
    <% @supplier.errors.full_messages_for(:city).each do |msg| %>
      <%= msg %><br><br>
    <% end %>
  </div>

  <div>
    <%= f.label :state %>
    <%= f.text_field :state %>
    <% @supplier.errors.full_messages_for(:state).each do |msg| %>
      <%= msg %><br><br>
    <% end %>
  </div>

  <div>
    <%= f.label :email %>
    <%= f.email_field :email %>
    <% @supplier.errors.full_messages_for(:email).each do |msg| %>
      <%= msg %><br><br>
    <% end %>
  </div>

  <br>
  <%= f.submit @supplier.persisted? ? 'Salvar fornecedor' : 'Adicionar fornecedor' %>
  
<% end %>