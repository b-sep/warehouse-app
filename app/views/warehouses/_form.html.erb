<%= form_with model: warehouse do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <% @warehouse.errors.full_messages_for(:name).each do |msg| %>
      <%= msg %><br><br>
    <% end %>
  </div>

  <div>
    <%= f.label :code %>
    <%= f.text_field :code, placeholder: '3 letras' %>
    <% @warehouse.errors.full_messages_for(:code).each do |msg| %>
      <%= msg %><br><br>
    <% end %>
  </div>

  <div>
    <%= f.label :city %>
    <%= f.text_field :city %>
    <% @warehouse.errors.full_messages_for(:city).each do |msg| %>
      <%= msg %><br><br>
    <% end %>
  </div>

  <div>
    <%= f.label :area %>
    <%= f.number_field :area %>
    <% @warehouse.errors.full_messages_for(:area).each do |msg| %>
      <%= msg %><br><br>
    <% end %>
  </div>

  <div>
    <%= f.label :address %>
    <%= f.text_field :address %>
    <% @warehouse.errors.full_messages_for(:address).each do |msg| %>
      <%= msg %><br><br>
    <% end %>
  </div>

  <div>
    <%= f.label :zip_code %>
    <%= f.text_field :zip_code, placeholder: '00000-000' %>
    <% @warehouse.errors.full_messages_for(:zip_code).each do |msg| %>
      <%= msg %><br><br>
    <% end %>
  </div>

  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
    <% @warehouse.errors.full_messages_for(:description).each do |msg| %>
      <%= msg %><br><br>
    <% end %>
  </div>

 
  <%= f.submit @warehouse.persisted? ? 'Salvar galpão' : 'Adicionar galpão' %>
  
<% end %>